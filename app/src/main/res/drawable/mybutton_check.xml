<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4EA3D1" />
            <gradient android:angle="-90" android:startColor="#15F4EE" android:endColor="#4EA3D1"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4EA3D1" />
            <solid android:color="#4EA3D1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4EA3D1" />
            <gradient android:angle="-90" android:startColor="#4EA3D1" android:endColor="#15F4EE" />
        </shape>
    </item>
</selector>