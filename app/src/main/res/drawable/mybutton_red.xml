<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#C83434" />
            <gradient android:angle="-90" android:startColor="#FF0000" android:endColor="#753333"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#C83434" />
            <solid android:color="#C83434"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#C83434" />
            <gradient android:angle="-90" android:startColor="#753333" android:endColor="#FF0000" />
        </shape>
    </item>
</selector>